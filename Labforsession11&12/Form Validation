<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <title>Register New Account</title>
    <script language="javascript">
        function frmValid() {
            var f = document.frmRegister;

            // 1. Regular Expression (Kiểm tra định dạng Email và Phone)
            var phone_pattern = /((\+[0-9]{2})|(\([0-9]{2}\))|([0-9]{2}))?(\s|-)?([0-9]{2})?(\s|-)?([0-9]{3})(\s|-)?([0-9]{4})/;
            var email_pattern = /^\w+(\.\w+)*@\w+(\.\w+)*\.\w+$/;

            // 2. Kiểm tra Username
            if (f.txtUsername.value == "") {
                alert("Username can't be empty!");
                f.txtUsername.focus();
                return false;
            }

            // 3. Kiểm tra Password (Độ dài từ 6 đến 20 ký tự)
            if (f.txtPassword.value.length < 6 || f.txtPassword.value.length > 20) {
                alert("Password length must be from 6 to 20 characters!");
                f.txtPassword.focus();
                return false;
            }

            // 4. Kiểm tra Confirm Password (Phải khớp với Password)
            if (f.txtPassword.value != f.txtConfirmPassword.value) {
                alert("Password doesn't match!");
                f.txtConfirmPassword.value = "";
                f.txtConfirmPassword.focus();
                return false;
            }

            // 5. Kiểm tra Phone Number (dùng RegEx)
            if (phone_pattern.test(f.txtPhone.value) == false) {
                alert("Invalid phone number!");
                f.txtPhone.focus();
                return false;
            }

            // 6. Kiểm tra Email Address (dùng RegEx)
            if (email_pattern.test(f.txtEmail.value) == false) {
                alert("Invalid email address!");
                f.txtEmail.focus();
                return false;
            }

            // 7. Kiểm tra Favourite (phải chọn ít nhất 1)
            if (!f.chkMusic.checked && !f.chkReading.checked) {
                alert("You must select at least one Favourite!");
                f.chkMusic.focus();
                return false;
            }

            // 8. Kiểm tra Picture
            if (f.filePicture.value == "") {
                alert("You must select your picture!");
                f.filePicture.focus();
                return false;
            }

            // 9. Kiểm tra Description
            if (f.txtDescription.value == "") {
                alert("You must enter description!");
                f.txtDescription.focus();
                return false;
            }

            // Nếu tất cả các kiểm tra đều PASS
            alert("All register information are correct.");
            return true;
        }
    </script>
</head>
<body>
    <form name="frmRegister" method="get" onsubmit="return frmValid()">
        <table border="0" align="center">
            <tr><td>Username</td><td><input type="text" name="txtUsername"></td></tr>
            <tr><td>Password</td><td><input type="password" name="txtPassword"></td></tr>
            <tr><td>Confirm password</td><td><input type="password" name="txtConfirmPassword"></td></tr>
            
            <tr>
                <td>Gender</td>
                <td>
                    <input type="radio" name="rdoGender" value="Male" checked> Male
                    <input type="radio" name="rdoGender" value="Female"> Female
                </td>
            </tr>
            
            <tr><td>Phone</td><td><input type="text" name="txtPhone"></td></tr>
            <tr><td>Email</td><td><input type="text" name="txtEmail"></td></tr>

            <tr>
                <td>Favourite</td>
                <td>
                    <input type="checkbox" name="chkMusic" value="Music"> Music
                    <input type="checkbox" name="chkReading" value="Reading"> Reading
                </td>
            </tr>

            <tr><td>Picture</td><td><input type="file" name="filePicture"></td></tr>
            <tr><td>Description</td><td><textarea name="txtDescription"></textarea></td></tr>
            
            <tr>
                <td>Education level</td>
                <td>
                    <select name="selEducation">
                        <option value="Atech">Atech</option>
                        <option value="Bach">Bachelor</option>
                    </select>
                </td>
            </tr>

            <tr>
                <td>Language</td>
                <td>
                    <select name="selLanguage" multiple>
                        <option value="Vietnamese">Vietnamese</option>
                        <option value="English">English</option>
                        <option value="French">French</option>
                        <option value="Japanese">Japanese</option>
                    </select>
                </td>
            </tr>
            
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Register">
                    <input type="reset" value="Reset">
                </td>
            </tr>
        </table>
    </form>
</body>
</html>
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <title>Mini Calculator</title>
    <script language="javascript">
        function calculate() {
            // Lấy giá trị từ form
            var tA = document.frmCal.tA.value;
            var tB = document.frmCal.tB.value;
            var tOp = document.frmCal.tOp.value;

            // Regular Expression để kiểm tra định dạng số (có thể có dấu chấm thập phân)
            var numberFormat = /^(-|\+)?(\d|[1-9]\d*)(\.\d+)?$/; 

            // Kiểm tra tính hợp lệ của số A
            if (numberFormat.test(tA) == false) {
                alert("tA must be a number!");
                document.frmCal.tA.focus();
                return;
            }

            // Kiểm tra tính hợp lệ của số B
            if (numberFormat.test(tB) == false) {
                alert("tB must be a number!");
                document.frmCal.tB.focus();
                return;
            }
            
            // Kiểm tra phép chia cho 0
            if (tOp == "/" && parseFloat(tB) == 0) {
                alert("tB can't be 0!");
                document.frmCal.tB.value = "";
                document.frmCal.tB.focus();
                return;
            }

            // Dùng eval để tính toán (KHÔNG nên dùng trong ứng dụng thực tế vì lý do bảo mật)
            document.frmCal.tResult.value = eval(tA + tOp + tB);
        }
    </script>
</head>
<body>
    <form name="frmCal" align="center">
        <table border="0" align="center" width="200">
            <tr>
                <td colspan="2" align="center">
                    <b>MINI CALCULATOR</b>
                </td>
            </tr>
            <tr>
                <td align="right">A = </td>
                <td>
                    <input type="text" name="tA" size="10" value="">
                </td>
            </tr>
            <tr>
                <td align="right">B = </td>
                <td>
                    <input type="text" name="tB" size="10" value="">
                </td>
            </tr>
            <tr>
                <td align="right">Operator:</td>
                <td>
                    <select name="tOp">
                        <option value="+">+</option>
                        <option value="-">-</option>
                        <option value="*">*</option>
                        <option value="/">/</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td align="right">Result:</td>
                <td>
                    <input type="text" name="tResult" size="10" readonly>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="button" value="Calculate" onClick="calculate()">
                </td>
            </tr>
        </table>
    </form>
</body>
</html>